---
// packages/ui/src/components/Features.astro
interface Feature {
  title: string;
  description: string;
  icon?: string; // Optional: for an icon class or emoji
}

interface Props {
  title: string;
  features: Feature[];
}

const { title, features } = Astro.props;
---

<section class="py-16 px-4 bg-bg-surface">
  <div class="container mx-auto text-center">
    <h2 class="text-3xl font-bold mb-12">{title}</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {features.map(feature => (
        <div class="p-6 bg-bg-base rounded-lg shadow-md">
          {feature.icon && <span class="text-4xl mb-4 inline-block text-primary">{feature.icon}</span>}
          <h3 class="text-xl font-semibold mb-2">{feature.title}</h3>
          <p class="text-text-muted">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
